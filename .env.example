# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AI/LLM Configuration (OpenAI is primary, Gemini is optional fallback)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here (optional, for fallback)

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Google Calendar OAuth2
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEZONE=UTC

# Work Hours (defaults, can be overridden per user)
DEFAULT_WORK_START_HOUR=8
DEFAULT_WORK_END_HOUR=20
DEFAULT_WEEKEND_START_HOUR=10
DEFAULT_WEEKEND_END_HOUR=18

# Check-in Interval (minutes)
CHECK_IN_INTERVAL=30

# Weekly Review Time (Sunday)
WEEKLY_REVIEW_HOUR=10

# Server Configuration
HOST=0.0.0.0
PORT=8000
